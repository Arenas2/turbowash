.layout-row>div
    max-height inherit !important

header
    height 100px
    .menu
        display: inline-flex;
        .navbutton
            padding: 12px;

.centro
    min-height calc(100vh - 50px);

md-dialog
    width: 50vw;

animation(animation)
    -webkit-animation animation 1000ms cubic-bezier(0.445, 0.050, 0.550, 0.950)
    animation animation 1000ms cubic-bezier(0.445, 0.050, 0.550, 0.950)
    -webkit-transition all 1s ease-in-out
    -moz-transition all 1s ease-in-out
    -o-transition all 1s ease-in-out
    transition all 1s ease-in-out

.ng-hide-add.ng-hide-add-active
    animation fadeOut


.ng-hide-remove.ng-hide-remove-active
    animation fadeIn

